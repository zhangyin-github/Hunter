<Page
    x:Class="Hunter.User_Upload.User_Upload"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hunter.User_Upload"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="10,0,0,0" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Text="主题:" FontSize="22" />
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="60,0,0,0" VerticalAlignment="Top" Width="120" >
            <ComboBoxItem Content="悬疑" Height="40" Width="120"/>
            <ComboBoxItem Content="推理" Height="40" Width="120"/>
            <ComboBoxItem Content="日常" Height="40" Width="120"/>
            <ComboBoxItem Content="其他" Height="40" Width="120"/>
        </ComboBox>
        <TextBlock Grid.Row="0"  Grid.Column="1" Text="场景:" FontSize="22"/>
        <ComboBox x:Name="comboBox1" Grid.Column="1" HorizontalAlignment="Left" Margin="60,0,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="校园" Height="40" Width="120"/>
            <ComboBoxItem Content="密室" Height="40" Width="120"/>
            <ComboBoxItem Content="街道" Height="40" Width="120"/>
            <ComboBoxItem Content="其他" Height="40" Width="120"/>
        </ComboBox>
        <TextBlock Grid.Row="1" Text="内容:" FontSize="22"/>
        <TextBox Grid.Row="1" Grid.ColumnSpan="2" Margin="10,43,10,10"/>
        <TextBlock Grid.Row="2" Text="图片:" FontSize="22"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="10,50,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100"/>
        <Image x:Name="image1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="100" Margin="130,50,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100"/>
        <Image x:Name="image2" Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="70,50,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100"/>
        <TextBlock Grid.Row="3" Text="提示及答案:" FontSize="22"/>
        <TextBox Grid.Row="3" Grid.ColumnSpan="2" Margin="10,38,10,10"/>
        <Button x:Name="upload" 
                Content="发布任务" 
                Grid.Column="1" 
                HorizontalAlignment="Right" 
                Margin="0,0,10,15" 
                Grid.Row="4" 
                VerticalAlignment="Bottom" 
                Width="100" 
                Height="35" 
               >

        </Button>
        <Button x:Name="add" 
                Content="+"
                Grid.Row="2"
                Grid.Column="0"
                Margin="10,50,0,0" 
                Height="100" 
                Width="100" 
                FontSize="48"
                RenderTransformOrigin="0.522,0.207" 
                Background="#33FBD65A">
            <Button.Flyout>
                <MenuFlyout Placement="Bottom">
                    <MenuFlyoutItem Text="从相册中选择"/>
                    <MenuFlyoutItem Text="拍照"/>
                </MenuFlyout>
            </Button.Flyout>
        </Button>
        <Button x:Name="back" 
                Content="返回"
                Margin="10,0,0,15" 
                Grid.Row="4" 
                VerticalAlignment="Bottom" 
                Width="100" 
                Height="35">

        </Button>
    </Grid>
</Page>

