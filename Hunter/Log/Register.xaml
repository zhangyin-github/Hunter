<Page
    x:Class="Hunter.Log.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hunter.Log"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid Name="picture" Grid.ColumnSpan="2">
                <Image Source="#"></Image>
            </Grid>
            <RelativePanel Grid.Column="0"
                    Grid.Row="1">
                <TextBlock Name="username"
                       Width="145"
                       Height="45"
                       FontSize="30"
                       RelativePanel.AlignHorizontalCenterWithPanel="True"
                        RelativePanel.AlignVerticalCenterWithPanel="True"> 用户名</TextBlock>
            </RelativePanel>
            <TextBox Name="userinfo"
                         Height="45"
                         FontSize="30"
                          Grid.Column="1"
                       Grid.Row="1"></TextBox>
            <RelativePanel Grid.Column="0"
                    Grid.Row="2">
                <TextBlock Name="password"
                          RelativePanel.AlignHorizontalCenterWithPanel="True"
                        RelativePanel.AlignVerticalCenterWithPanel="True"
                       Width="145"
                       Height="45"
                       FontSize="30"
                       > 密码</TextBlock>
            </RelativePanel>
            <TextBox Name="passwordinfo"
                         Height="45"
                         FontSize="30"
                         Grid.Row="2"
                        Grid.Column="1"></TextBox>
            <RelativePanel Grid.Column="0"
                    Grid.Row="3">
                <TextBlock Name="password_again"
                          RelativePanel.AlignHorizontalCenterWithPanel="True"
                        RelativePanel.AlignVerticalCenterWithPanel="True"
                       Width="145"
                       Height="45"
                       FontSize="30"
                       > 确认密码</TextBlock>
            </RelativePanel>
            <TextBox Name="password_againinfo"
                         Height="45"
                         FontSize="30"
                         Grid.Row="3"
                        Grid.Column="1"></TextBox>
            <Button Name="login"
                    Click="login_Click"
                    MinHeight="20"
                    Grid.Column="1"
                    FontSize="30"
                    Grid.Row="4">登录</Button>
        </Grid>
    </Grid>
</Page>
